<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.d20.teamL.views.controllers.NotificationsPageController">
   <top>
      <Label text="Notifications" BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin></Label>
   </top>
   <left>
      <JFXListView fx:id="notifications" onMouseClicked="#displaySelected" prefHeight="678.0" prefWidth="428.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <top>
            <Label fx:id="reqMessage" text="Nurse has requested a dosage of Medicine for patient (patientID) in room #" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <Label fx:id="addInfo" text="Additional Info" BorderPane.alignment="TOP_LEFT">
               <BorderPane.margin>
                  <Insets bottom="30.0" left="10.0" right="10.0" top="30.0" />
               </BorderPane.margin>
            </Label>
         </center>
         <bottom>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXButton fx:id="btnBack" onAction="#handleButtonAction" prefHeight="75.0" prefWidth="175.0" style="-fx-background-color: #ababab;" text="Back">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="btnCompleted" prefHeight="75.0" prefWidth="175.0" style="-fx-background-color: #19c502;" text="Completed">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="btnDecline" prefHeight="75.0" prefWidth="175.0" style="-fx-background-color: #da0f0f;" text="Decline">
                     <font>
                        <Font size="26.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </JFXButton>
               </children>
            </HBox>
         </bottom>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </BorderPane>
   </center>
</BorderPane>

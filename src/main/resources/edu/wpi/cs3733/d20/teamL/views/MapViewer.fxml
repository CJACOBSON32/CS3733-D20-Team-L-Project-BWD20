<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.d20.teamL.views.controllers.map.MapViewerController">
    <left>
        <VBox prefWidth="333.0" styleClass="background" BorderPane.alignment="CENTER">
            <children>
                <JFXButton buttonType="RAISED" onAction="#backToMain" prefHeight="48.0" prefWidth="53.0" text="🏠" textFill="WHITE">
                    <font>
                        <Font size="22.0" />
                    </font>
                </JFXButton>
                <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="background">
                    <children>
                        <JFXTextField fx:id="startingPoint" focusColor="WHITE" labelFloat="true" onKeyTyped="#startingPointAutocomplete" promptText="Starting Point" style="-fx-text-inner-color: white; -fx-prompt-text-fill: #d0d0d0;" styleClass="map-text" text="Hallway Intersection 14 Level 2" />
                        <JFXTextField fx:id="destination" focusColor="WHITE" labelFloat="true" onKeyTyped="#destinationAutocomplete" promptText="Destination" style="-fx-text-inner-color: white; -fx-prompt-text-fill: #d0d0d0;" styleClass="map-text" />
                        <JFXButton buttonType="RAISED" onAction="#navigate" styleClass="map-text" text="Navigate" textFill="WHITE" />
                        <VBox fx:id="instructions" alignment="TOP_CENTER" spacing="10.0" style="-fx-border-color: white; -fx-border-radius: 5px;" styleClass="map-text" visible="false">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                        <JFXButton fx:id="btnTextMe" buttonType="RAISED" onAction="#handleText" prefHeight="32.0" prefWidth="140.0" style="-fx-background-color: #4d4d4d;" styleClass="map-text" text="Text Me Directions" textFill="WHITE" visible="false" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>
    <center>

    </center>
   <stylesheets>
      <URL value="@../css/GlobalStyles.css" />
      <URL value="@../css/MapStyles.css" />
   </stylesheets>
</BorderPane>

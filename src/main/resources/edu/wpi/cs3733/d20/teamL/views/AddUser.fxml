            <VBox BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="475.0" prefWidth="128.0" spacing="25.0">
                     <children>
                        <HBox alignment="BOTTOM_LEFT" prefHeight="40.0" prefWidth="248.0" spacing="2.0">
                           <children>
                              <Label fx:id="serviceLbl" text="Service Request Capabilities:" textFill="WHITE">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <JFXCheckBox fx:id="securityBox" checkedColor="WHITE" onAction="#securityCheck" text="Security">

                        <JFXCheckBox fx:id="interpreterBox" checkedColor="WHITE" onAction="#checkInterpreter" text="Interpreter">
                           <VBox.margin>
                              <Insets left="80.0" />
                           </VBox.margin>
                        </JFXCheckBox>
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" top="30.0" />
                     </VBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets top="50.0" />
               </padding>
            </VBox>
         </left>
      </BorderPane>
   </center>
   <top>
      <Label text="Add User" textFill="WHITE" BorderPane.alignment="BOTTOM_CENTER">

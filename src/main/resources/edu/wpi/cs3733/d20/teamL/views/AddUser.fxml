                              <Insets left="80.0" />
                           </VBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="extTransportBox" checkedColor="WHITE" onAction="#checkExTransport" text="External Transport">
                           <VBox.margin>
                              <Insets left="80.0" />
                           </VBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="maintenanceBox" checkedColor="WHITE" onAction="#checkMaintenance" text="Maintenance">
                           <VBox.margin>
                              <Insets left="80.0" />
                           </VBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="sanitationBox" checkedColor="WHITE" onAction="#checkSanitation" text="Sanitation">
                           <VBox.margin>
                              <Insets left="80.0" />
                           </VBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="pharmacistBox" checkedColor="WHITE" text="Pharmacist">
                           <VBox.margin>
                              <Insets left="80.0" />
                           </VBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="giftShopBox" checkedColor="WHITE" onAction="#checkGiftShop" text="Gift Shop">
                           <VBox.margin>

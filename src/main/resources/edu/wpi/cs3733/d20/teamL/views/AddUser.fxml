                        <JFXTextField fx:id="fNameText" labelFloat="true" prefHeight="40.0" promptText="First Name" />
                        <JFXTextField fx:id="lNameText" labelFloat="true" prefHeight="40.0" promptText="Last Name" />
                        <JFXComboBox fx:id="serviceCombo" onAction="#serviceSelected" prefHeight="41.0" promptText="Service" styleClass="text-field" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <JFXTextField fx:id="usernameText" labelFloat="true" prefHeight="40.0" promptText="Username" />
                        <JFXTextField fx:id="passwordText" labelFloat="true" prefHeight="40.0" promptText="Password" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="1080.0" spacing="20.0">
                     <children>
                        <JFXComboBox fx:id="userCombo" onAction="#userSelected" promptText="Type of User" styleClass="text-field" />

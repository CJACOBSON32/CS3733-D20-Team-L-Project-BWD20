<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.cs3733.d20.teamL.views.controllers.AddDoctorController">
    <top>
        <Label contentDisplay="CENTER" prefHeight="73.0" prefWidth="299.0" text="Add Doctor" textFill="#0d2e57"
               BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="50.0"/>
            </font>
        </Label>
    </top>
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0" BorderPane.alignment="CENTER">
            <children>
                <JFXButton fx:id="btnCancel" buttonType="RAISED" maxWidth="200.0" onAction="#handleButtonAction"
                           prefHeight="75.0" prefWidth="200.0" style="-fx-background-color: #dfdfdc;" text="Cancel"
                           textAlignment="CENTER">
                    <font>
                        <Font size="40.0"/>
                    </font>
                </JFXButton>
                <JFXButton fx:id="btnSubmit" buttonType="RAISED" maxWidth="200.0" onAction="#handleButtonAction"
                           prefHeight="75.0" prefWidth="200.0" style="-fx-background-color: #0d2e57;" text="Submit"
                           textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="40.0"/>
                    </font>
                </JFXButton>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                           GridPane.rowIndex="2">
                    <items>
                        <Label text="Email">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="emailText" prefHeight="50.0"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;"/>
                    </items>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </SplitPane>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                           GridPane.columnIndex="1">
                    <items>
                        <Label text="Doctor ID">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="doctorIDText" prefHeight="50.0"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;"/>
                    </items>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </SplitPane>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                           GridPane.rowIndex="1">
                    <items>
                        <Label text="Doctor Last Name ">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="lNameText" prefHeight="50.0"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;"/>
                    </items>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </SplitPane>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                           GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <items>
                        <Label text="Office Number">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="officeNumText" prefHeight="50.0" onKeyTyped="#autocomplete"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;"/>
                    </items>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </SplitPane>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                           GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <items>
                        <Label text="Additional Information">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="addInfoText" prefHeight="50.0"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </JFXTextField>
                    </items>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </SplitPane>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
                    <items>
                        <Label text="Doctor First Name">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="fNameText" prefHeight="50.0"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;"/>
                    </items>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </SplitPane>
            </children>
        </GridPane>
    </center>
</BorderPane>
